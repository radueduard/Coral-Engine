#version 460 core

#extension GL_EXT_mesh_shader : enable

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout(triangles, max_vertices = 256, max_primitives = 256) out;

layout (push_constant) uniform PushConstants {
    uint stepCount;
} pushConstants;

layout (set = 0, binding = 0) buffer VertexColors {
    vec4 data[];
} vertexColors;

layout (location = 0) out PerVertexData {
    vec4 color;
} v_out[];

const float PI = 3.14159265359;

void main() {
    uint instanceIndex = gl_GlobalInvocationID.x;

    int stepCount = int(pushConstants.stepCount);

    gl_MeshVerticesEXT[0].gl_Position = vec4(0.0, 0.0, 0.0, 1.0);
    v_out[0].color = vec4(0.0, 0.0, 0.0, 1.0);

    float angle = PI * 2.0 * float(instanceIndex) / stepCount;
    gl_MeshVerticesEXT[1].gl_Position = vec4(.7 * cos(angle), .7 * sin(angle), 0.0, 1.0);
    v_out[1].color = vertexColors.data[instanceIndex];

    angle = PI * 2.0 * float((instanceIndex + 1) % stepCount) / stepCount;
    gl_MeshVerticesEXT[2].gl_Position = vec4(.7 * cos(angle), .7 * sin(angle), 0.0, 1.0);
    v_out[2].color = vertexColors.data[(instanceIndex + 1) % stepCount];

    gl_PrimitiveTriangleIndicesEXT[0] = uvec3(0, 1, 2);

    SetMeshOutputsEXT(3, 1);
}