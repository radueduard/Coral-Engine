#version 460 core

#extension GL_EXT_mesh_shader : enable

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(triangles, max_vertices = 8, max_primitives = 12) out;

layout (push_constant) uniform PushConstants {
    mat4 View;
    mat4 Projection;
} pushConstants;

layout (location = 0) out PerVertexData {
    vec4 position;
} v_out[];

void main() {
    mat4 newView = pushConstants.View;
    newView[3] = vec4(0, 0, 0, 1);

    vec3 positions[8] = vec3[](
        vec3(-1, -1, -1),
        vec3(1, -1, -1),
        vec3(1, 1, -1),
        vec3(-1, 1, -1),
        vec3(-1, -1, 1),
        vec3(1, -1, 1),
        vec3(1, 1, 1),
        vec3(-1, 1, 1)
    );

    for (int i = 0; i < 8; i++) {
        v_out[i].position = vec4(positions[i], 1.0);
        gl_MeshVerticesEXT[i].gl_Position =
            pushConstants.Projection *
            newView *
            vec4(positions[i], 1.0);
    }

    uvec3 triangles[12] = uvec3[](
        uvec3(0, 1, 2),
        uvec3(0, 2, 3),
        uvec3(1, 5, 6),
        uvec3(1, 6, 2),
        uvec3(5, 4, 7),
        uvec3(5, 7, 6),
        uvec3(4, 0, 3),
        uvec3(4, 3, 7),
        uvec3(3, 2, 6),
        uvec3(3, 6, 7),
        uvec3(4, 5, 1),
        uvec3(4, 1, 0)
    );

    for (int i = 0; i < 12; i++) {
        gl_PrimitiveTriangleIndicesEXT[i] = triangles[i];
    }

    SetMeshOutputsEXT(8, 12);
}